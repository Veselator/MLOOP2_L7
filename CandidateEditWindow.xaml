<Window x:Class="MLOOP2_L7.CandidateEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кандидат" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <TextBlock x:Name="headerText"
                      Text="➕ Додати нового кандидата"
                      FontSize="22"
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="П.І.Б. *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="fullNameBox" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Дата народження *" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="birthDatePicker" Height="35" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Освіта *" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="educationCombo" Style="{StaticResource ComboStyle}" Margin="0,0,0,15">
                    <ComboBoxItem Content="Середня"/>
                    <ComboBoxItem Content="Середня спеціальна"/>
                    <ComboBoxItem Content="Вища"/>
                </ComboBox>

                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Знання іноземних мов" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Англійська:" FontSize="12" Margin="0,0,0,3"/>
                                <ComboBox x:Name="englishCombo" Style="{StaticResource ComboStyle}">
                                    <ComboBoxItem Content="Не володію" IsSelected="True"/>
                                    <ComboBoxItem Content="Володію вільно"/>
                                    <ComboBoxItem Content="Читаю та перекладаю зі словником"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Німецька:" FontSize="12" Margin="0,0,0,3"/>
                                <ComboBox x:Name="germanCombo" Style="{StaticResource ComboStyle}">
                                    <ComboBoxItem Content="Не володію" IsSelected="True"/>
                                    <ComboBoxItem Content="Володію вільно"/>
                                    <ComboBoxItem Content="Читаюта перекладаю зі словником"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Французька:" FontSize="12" Margin="0,0,0,3"/>
                            <ComboBox x:Name="frenchCombo" Style="{StaticResource ComboStyle}" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Не володію" IsSelected="True"/>
                                <ComboBoxItem Content="Володію вільно"/>
                                <ComboBoxItem Content="Читаю та перекладаю зі словником"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <TextBlock Text="Стаж роботи (років) *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="experienceBox" Style="{StaticResource InputStyle}" Margin="0,0,0,15" Width="150" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <CheckBox x:Name="computerSkillsCheck" 
                         Content="Володію комп'ютером" 
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Margin="0,0,30,0"/>
                    <CheckBox x:Name="recommendationsCheck" 
                         Content="Наявність рекомендацій" 
                         FontSize="14"
                         VerticalContentAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="* - обов'язкові поля" FontSize="11" Foreground="#999999" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="2" Background="#EEEEEE" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="✖ Скасувати"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>
                <Button Content="✔ Зберегти"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Save_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
