<Window x:Class="MLOOP2_L7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управління кандидатами By Borys Solomka from group KN-24-1" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#4CAF50" Offset="0"/>
                    <GradientStop Color="#45A049" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📋 Конкурс на заміщення вакантної посади" 
                              Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="candidatesCountLabel"
                              Text="Всього кандидатів: 0" 
                              FontSize="14"
                              Foreground="#E8F5E9"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Додати кандидата"
                            Background="#2196F3"
                            Style="{StaticResource ButtonStyle}"
                            Click="AddCandidate_Click"/>
                    <Button Content="🔄 Оновити"
                            Background="#FF9800"
                            Style="{StaticResource ButtonStyle}"
                            Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#F5F5F5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Освіта:" Style="{StaticResource FilterLabelStyle}"/>
                    <ComboBox x:Name="filterEducation" Height="30" SelectedIndex="0">
                        <ComboBoxItem Content="Всі"/>
                        <ComboBoxItem Content="Середня"/>
                        <ComboBoxItem Content="Середня спеціальна"/>
                        <ComboBoxItem Content="Вища"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Іноземна мова:" Style="{StaticResource FilterLabelStyle}"/>
                    <ComboBox x:Name="filterLanguage" Height="30" SelectedIndex="0">
                        <ComboBoxItem Content="Всі"/>
                        <ComboBoxItem Content="Англійська"/>
                        <ComboBoxItem Content="Німецька"/>
                        <ComboBoxItem Content="Французька"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Мін. досвід (років):" Style="{StaticResource FilterLabelStyle}"/>
                    <TextBox x:Name="filterExperience" Height="30" VerticalContentAlignment="Center" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="5" VerticalAlignment="Bottom">
                    <CheckBox x:Name="filterComputerSkills" 
                             Content="Володіє ПК" 
                             FontSize="12"
                             Margin="0,0,0,8"/>
                    <CheckBox x:Name="filterRecommendations" 
                             Content="Має рекомендації" 
                             FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <Button Content="🔍 Фільтрувати"
                            Background="#4CAF50"
                            Style="{StaticResource ButtonStyle}"
                            Click="Filter_Click"/>
                    <Button Content="❌ Скинути"
                            Background="#9E9E9E"
                            Style="{StaticResource ButtonStyle}"
                            Click="ResetFilter_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="candidatesDataGrid"
                 Grid.Row="2"
                 Margin="15"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 AlternatingRowBackground="#F9F9F9"
                 RowHeight="40"
                 ColumnHeaderHeight="45"
                 MouseDoubleClick="CandidatesDataGrid_DoubleClick">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="П.І.Б." Binding="{Binding FullName}" Width="180"/>
                <DataGridTextColumn Header="Вік" Binding="{Binding BirthDate, StringFormat={}{0:yyyy}}" Width="60"/>
                <DataGridTextColumn Header="Освіта" Binding="{Binding Education}" Width="130"/>
                <DataGridTextColumn Header="Досвід (років)" Binding="{Binding WorkExperience}" Width="100"/>
                <DataGridCheckBoxColumn Header="ПК" Binding="{Binding HasComputerSkills}" Width="50"/>
                <DataGridCheckBoxColumn Header="Рекомендації" Binding="{Binding HasRecommendations}" Width="100"/>
                <DataGridTextColumn Header="Дата подачі" Binding="{Binding ApplicationDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#EEEEEE" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="statusLabel"
                          Text="Готово"
                          FontSize="13"
                          Foreground="#666666"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="👁️ Переглянути"
                            Background="#2196F3"
                            Style="{StaticResource ButtonStyle}"
                            Click="ViewCandidate_Click"/>
                    <Button Content="✏️ Редагувати"
                            Background="#FF9800"
                            Style="{StaticResource ButtonStyle}"
                            Click="EditCandidate_Click"/>
                    <Button Content="🗑️ Видалити"
                            Background="#F44336"
                            Style="{StaticResource ButtonStyle}"
                            Click="DeleteCandidate_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>